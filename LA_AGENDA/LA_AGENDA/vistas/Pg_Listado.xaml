<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LA_AGENDA.vistas.Pg_Listado">
    <StackLayout Margin="20,35,20,20">
        <CollectionView x:Name="collectionView" 
                SelectionMode="Single"
                SelectionChanged="OnCollectionViewSelectionChanged"> 
            <CollectionView.ItemTemplate >
                <DataTemplate >
                    
                        <StackLayout>
                        <Label Text="{Binding ID}"
                               x:Name="Identificador"
                               FontSize="Medium" />
                        <Label Text="{Binding nombre}"                               
                               FontSize="Medium" />
                            <Label Text="{Binding lugar}"
                               TextColor="Silver"
                               FontSize="Small" />
                        <Button Text="Eliminar" x:Name="btnEliminar"></Button>
                    </StackLayout>
                       

                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
        
        
        <!--Comprobar cuál es el objeto seleccionado????-->
        <Label x:Name="selectedID" Text="SELECCION!!"></Label>
        
    </StackLayout>
    
    
    
</ContentPage>